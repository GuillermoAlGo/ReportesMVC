@{
}
@model List<Persona>

<div class="container-fluid justify-content-center">
    <div class="row">
        <div class="col-10">
            <table id="personasGrid" class="table table-striped table-condensed table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno </th>
                        <th>Sexo </th>
                        <th>Correo </th>
                        <th> Teléfono Celular </th>
                        <th> Tipo Doc </th>
                        <th> Número de Identificación </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var persona in Model)
                    {
                        <tr data-id="@persona.IIDPERSONA">
                            <td>@persona.NOMBRE</td>
                            <td>@persona.APPATERNO</td>
                            <td>@persona.APMATERNO</td>
                            <td>@persona.IIDSEXO</td>
                            <td>@persona.CORREO </td>
                            <td>@persona.TELEFONOCELULAR1 </td>
                            <td>@persona.IIDTIPODOCUMENTO </td>
                            <td>@persona.NUMEROIDENTIFICACION </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>

